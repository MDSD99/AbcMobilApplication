                    </LinearGradientBrush>
                </Frame.Background>
                <StackLayout VerticalOptions="Center">
                    <Label FontSize="45"  TextColor="White" FontAttributes="Bold" Padding="20,40,20,20" HorizontalOptions="Center" Text="Qent-Soft"/>
